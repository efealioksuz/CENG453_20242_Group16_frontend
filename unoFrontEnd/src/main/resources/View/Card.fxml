<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:id="cardPane"
           fx:controller="com.example.unofrontend.controllers.CardController"
           styleClass="uno-card"
           stylesheets="@../styles/uno-cards.css">
    
    <VBox alignment="CENTER" spacing="10">
        <Label fx:id="cardSymbol" styleClass="card-symbol"/>
    </VBox>
    
    <Label fx:id="topLeftNumber" styleClass="corner-number"
           StackPane.alignment="TOP_LEFT">
        <StackPane.margin>
            <Insets top="5" left="5"/>
        </StackPane.margin>
    </Label>
    
    <Label fx:id="bottomRightNumber" styleClass="corner-number"
           StackPane.alignment="BOTTOM_RIGHT">
        <StackPane.margin>
            <Insets bottom="5" right="5"/>
        </StackPane.margin>
    </Label>

    <Label fx:id="unoText" text="UNO" styleClass="uno-text" visible="false"/>
</StackPane> 