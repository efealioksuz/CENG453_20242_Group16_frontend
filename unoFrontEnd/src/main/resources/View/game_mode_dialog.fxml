<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.unofrontend.controllers.GameModeDialogController"
            prefHeight="300.0" prefWidth="400.0"
            style="-fx-background-color: radial-gradient(center 50% 40%, radius 80%, #23272f 0%, #23272f 60%, #181a20 100%); -fx-background-radius: 15;">
    <VBox alignment="CENTER" spacing="25" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0">
        <padding>
            <Insets top="30" right="30" bottom="30" left="30"/>
        </padding>
        <Label text="Select Game Mode"
               style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: white; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.7), 5, 0, 0, 0);"/>
        <Button fx:id="singlePlayerButton"
                text="Single Player"
                onAction="#handleSinglePlayer"
                style="-fx-background-color: #009688; -fx-text-fill: white; -fx-font-size: 18px; -fx-padding: 10 20; -fx-background-radius: 8; -fx-cursor: hand;"/>
        <Button fx:id="multiPlayerButton"
                text="Multiplayer"
                onAction="#handleMultiPlayer"
                style="-fx-background-color: #3949ab; -fx-text-fill: white; -fx-font-size: 18px; -fx-padding: 10 20; -fx-background-radius: 8; -fx-cursor: hand;"/>
        <Button fx:id="goBackButton"
                text="Go Back"
                onAction="#handleGoBack"
                style="-fx-background-color: #546e7a; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 8 16; -fx-background-radius: 6; -fx-cursor: hand;"/>
    </VBox>
</AnchorPane> 