<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.unofrontend.controllers.ResetPasswordController"
            style="-fx-background-color: radial-gradient(center 50% 40%, radius 80%, #23272f 0%, #23272f 60%, #181a20 100%);"
            prefWidth="1920.0" prefHeight="1080.0"
            AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">

    <children>
        <VBox spacing="40" alignment="CENTER" maxWidth="600.0"
              AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0"
              AnchorPane.topAnchor="0.0"
              AnchorPane.bottomAnchor="0.0">
            <ImageView fitHeight="120" preserveRatio="true">
                <image>
                    <Image url="@../images/UNO_Logo.svg.png" />
                </image>
            </ImageView>
            <VBox spacing="14" 
                  style="-fx-background-color: #23272f;
                         -fx-padding: 20 24 20 24;
                         -fx-background-radius: 14;
                         -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.4), 12, 0, 0, 0);"
                  maxWidth="400"
                  alignment="CENTER"
                  prefWidth="300"
                  prefHeight="420">
                <TextField fx:id="emailField"
                           promptText="Email"
                           style="-fx-background-radius: 6;
                                  -fx-background-color: #ffffff;
                                  -fx-padding: 8;"
                           maxWidth="300" prefWidth="300" minWidth="300"
                           focusTraversable="false"/>
                <Button fx:id="sendButton" text="" onAction="#handleSendEmail"
                        style="-fx-background-color: #ffd600;
                               -fx-font-size: 18px;
                               -fx-padding: 8 24;
                               -fx-background-radius: 6;
                               -fx-cursor: hand;"
                        maxWidth="300" prefWidth="300" minWidth="300">
                    <graphic>
                        <Label text="Send Reset Link"
                               style="-fx-text-fill: white;
                                      -fx-font-size: 18px;
                                      -fx-effect: dropshadow(gaussian, black, 3, 0.4, 0, 0);"/>
                    </graphic>
                </Button>
                <VBox fx:id="tokenSection" spacing="10" alignment="CENTER">
                    <TextField fx:id="tokenField"
                               promptText="Token"
                               style="-fx-background-radius: 6;
                                      -fx-background-color: #ffffff;
                                      -fx-padding: 8;"
                               maxWidth="300" prefWidth="300" minWidth="300"
                               focusTraversable="false"/>
                    <PasswordField fx:id="newPasswordField"
                                   promptText="New Password"
                                   style="-fx-background-radius: 6;
                                          -fx-background-color: #ffffff;
                                          -fx-padding: 8;"
                                   maxWidth="300" prefWidth="300" minWidth="300"
                                   focusTraversable="false"/>
                    <Button fx:id="submitButton" text="" onAction="#handleSubmit"
                            style="-fx-background-color: #ffd600;
                                   -fx-font-size: 18px;
                                   -fx-padding: 8 24;
                                   -fx-background-radius: 6;
                                   -fx-cursor: hand;"
                            maxWidth="300" prefWidth="300" minWidth="300">
                        <graphic>
                            <Label text="Reset Password"
                                   style="-fx-text-fill: white;
                                          -fx-font-size: 18px;
                                          -fx-effect: dropshadow(gaussian, black, 3, 0.4, 0, 0);"/>
                        </graphic>
                    </Button>
                </VBox>
                <Button fx:id="backToLoginButton" text="" onAction="#switchToLogin"
                        style="-fx-background-color: #e53935;
                               -fx-font-size: 14px;
                               -fx-padding: 8 24;
                               -fx-background-radius: 6;
                               -fx-cursor: hand;"
                        maxWidth="300" prefWidth="300" minWidth="300">
                    <graphic>
                        <Label text="Back to Login"
                               style="-fx-text-fill: white;
                                      -fx-font-size: 14px;
                                      -fx-effect: dropshadow(gaussian, black, 3, 0.4, 0, 0);"/>
                    </graphic>
                </Button>
                <Label fx:id="errorLabel" style="-fx-text-fill: #E74C3C; -fx-font-size: 14px; -fx-padding: 10 0 0 0; -fx-alignment: center;" maxWidth="Infinity" wrapText="true"/>
            </VBox>
        </VBox>
    </children>
</AnchorPane> 