<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.unofrontend.controllers.MenuController"
            prefHeight="600.0" prefWidth="800.0"
            style="-fx-background-color: #2C3E50;">

    <VBox spacing="20" alignment="CENTER" 
          AnchorPane.leftAnchor="0.0" 
          AnchorPane.rightAnchor="0.0" 
          AnchorPane.topAnchor="0.0" 
          AnchorPane.bottomAnchor="0.0">
        
        <Label text="UNO Game" 
               style="-fx-font-size: 48px; -fx-text-fill: white; -fx-font-weight: bold;"/>
        
        <VBox spacing="10" alignment="CENTER" style="-fx-background-color: #34495E; -fx-padding: 20; -fx-background-radius: 10;">
            <Button fx:id="newGameButton" 
                    text="New Game" 
                    onAction="#handleNewGame"
                    style="-fx-background-color: #27AE60; -fx-text-fill: white; -fx-font-size: 18px; -fx-min-width: 200; -fx-min-height: 40;"/>
            
            <VBox fx:id="gameModeBox" 
                  spacing="10" 
                  alignment="CENTER" 
                  visible="false">
                <Button fx:id="singlePlayerButton" 
                        text="Single Player" 
                        onAction="#handleSinglePlayer"
                        style="-fx-background-color: #2980B9; -fx-text-fill: white; -fx-font-size: 16px; -fx-min-width: 180; -fx-min-height: 35;"/>
                
                <Button fx:id="multiPlayerButton" 
                        text="Multiplayer" 
                        onAction="#handleMultiPlayer"
                        style="-fx-background-color: #8E44AD; -fx-text-fill: white; -fx-font-size: 16px; -fx-min-width: 180; -fx-min-height: 35;"/>
            </VBox>

            <Button fx:id="leaderboardButton" 
                    text="Leaderboard" 
                    onAction="#handleLeaderboard"
                    style="-fx-background-color: #F39C12; -fx-text-fill: white; -fx-font-size: 18px; -fx-min-width: 200; -fx-min-height: 40;"/>
        </VBox>
        
        <Button fx:id="logoutButton" 
                text="Logout" 
                onAction="#handleLogout"
                style="-fx-background-color: #E74C3C; -fx-text-fill: white; -fx-font-size: 14px; -fx-min-width: 100;"/>
    </VBox>
</AnchorPane> 