<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.shape.Circle?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.unofrontend.controllers.LoginController"
            style="-fx-background-color: radial-gradient(center 50% 40%, radius 80%, #23272f 0%, #23272f 60%, #181a20 100%);"
            prefWidth="1920.0" prefHeight="1080.0"
            AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">

    <children>
        <VBox spacing="40" alignment="CENTER" maxWidth="600.0"
              AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0"
              AnchorPane.topAnchor="0.0"
              AnchorPane.bottomAnchor="0.0">
              
            <padding>
                <Insets top="40" right="40" bottom="40" left="40"/>
            </padding>

            <ImageView fitHeight="120" preserveRatio="true">
                <image>
                    <Image url="@../images/UNO_Logo.svg.png" />
                </image>
            </ImageView>

            <VBox spacing="20" 
                  style="-fx-background-color: #23272f;
                         -fx-padding: 24 24 24 24;
                         -fx-background-radius: 14;
                         -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.4), 12, 0, 0, 0);"
                  maxWidth="400"
                  alignment="CENTER"
                  prefWidth="300"
                  >

                <TextField fx:id="usernameField"
                           promptText="Username"
                           style="-fx-background-radius: 6;
                                  -fx-background-color: #ffffff;
                                  -fx-padding: 8;"
                           maxWidth="300" prefWidth="300" minWidth="300"
                           focusTraversable="false"/>

                <PasswordField fx:id="passwordField"
                                 promptText="Password"
                                 style="-fx-background-radius: 6;
                                        -fx-background-color: #ffffff;
                                        -fx-padding: 8;"
                                 maxWidth="300" prefWidth="300" minWidth="300"
                                 focusTraversable="false"/>

                <Button text="" 
                        onAction="#handleLogin"
                        style="-fx-background-color: #ffd600;
                               -fx-font-size: 18px;
                               -fx-padding: 8 24;
                               -fx-background-radius: 6;
                               -fx-cursor: hand;"
                        maxWidth="300" prefWidth="300" minWidth="300"
                        maxHeight="40" prefHeight="40" minHeight="40">
                    <graphic>
                        <Label text="Login"
                               style="-fx-text-fill: white;
                                      -fx-font-size: 18px;
                                      -fx-effect: dropshadow(gaussian, black, 3, 0.4, 0, 0);"/>
                    </graphic>
                </Button>

                <Separator style="-fx-background-color: transparent; -fx-padding: 10;"/>

                <VBox spacing="10" alignment="CENTER">
                    <Button fx:id="registerButton" 
                            text="" 
                            onAction="#switchToRegister"
                            style="-fx-background-color: #e53935;
                                   -fx-font-size: 14px;
                                   -fx-padding: 8 24;
                                   -fx-background-radius: 6;
                                   -fx-cursor: hand;"
                            maxWidth="300" prefWidth="300" minWidth="300">
                        <graphic>
                            <Label text="Register"
                                   style="-fx-text-fill: white;
                                          -fx-font-size: 14px;
                                          -fx-effect: dropshadow(gaussian, black, 3, 0.4, 0, 0);"/>
                        </graphic>
                    </Button>

                    <Button fx:id="resetPasswordButton" 
                            text="" 
                            onAction="#switchToResetPassword"
                            style="-fx-background-color: #3949ab;
                                   -fx-font-size: 14px;
                                   -fx-padding: 8 24;
                                   -fx-background-radius: 6;
                                   -fx-cursor: hand;"
                            maxWidth="300" prefWidth="300" minWidth="300">
                        <graphic>
                            <Label text="Reset Password"
                                   style="-fx-text-fill: white;
                                          -fx-font-size: 14px;
                                          -fx-effect: dropshadow(gaussian, black, 3, 0.4, 0, 0);"/>
                        </graphic>
                    </Button>
                </VBox>

                <Label fx:id="errorLabel" 
                       style="-fx-text-fill: #E74C3C;
                              -fx-font-size: 14px;
                              -fx-padding: 10 0 0 0;
                              -fx-alignment: center;"
                       maxWidth="Infinity"
                       wrapText="true"/>
            </VBox>
        </VBox>
    </children>
</AnchorPane>
