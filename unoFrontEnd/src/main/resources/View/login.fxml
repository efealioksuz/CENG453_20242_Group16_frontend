<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.unofrontend.controllers.LoginController"
            prefHeight="400.0" prefWidth="600.0">

    <children>
        <VBox spacing="10" alignment="CENTER" prefWidth="600.0" prefHeight="400.0"
              AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0"
              AnchorPane.topAnchor="0.0"
              AnchorPane.bottomAnchor="0.0">
            <Label text="Login" style="-fx-font-size: 24px;"/>

            <HBox spacing="10" alignment="CENTER">
                <Label text="Username:"/>
                <TextField fx:id="usernameField" prefWidth="200.0"/>
            </HBox>

            <HBox spacing="10" alignment="CENTER">
                <Label text="Password:"/>
                <PasswordField fx:id="passwordField" prefWidth="200.0"/>
            </HBox>

            <Button text="Login" prefWidth="100.0" onAction="#handleLogin"/>

            <Label fx:id="errorLabel" textFill="red"/>
        </VBox>
    </children>
</AnchorPane>
